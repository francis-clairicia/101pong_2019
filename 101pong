import sys

argv = sys.argv
m0 = list()
m1 = list()

def print_usage():
    print("USAGE")
    print("\t./101pong x0 y0 z0 x1 y1 z1 n\n")
    print("DESCRIPTION")
    print("\tx0  ball abscissa at time t - 1")
    print("\tx0  ball abscissa at time t - 1")
    print("\tx0  ball abscissa at time t - 1")
    print("\tx1  ball abscissa at time t")
    print("\tx1  ball abscissa at time t")
    print("\tx1  ball abscissa at time t")
    print("\tn   time shift (greater than or equal to 0)")
    exit(84)

def check_error():
    if (len(argv) != 8):
        print_usage()
    for i in range(1, 8):
        try:
            float(argv[i])
        except ValueError:
            print_usage()
        else:
            pass

def convert_args():
    global time, m0, m1
    for loop in range(1, 4) :
        m0.append(float(argv[loop]))
    for loop in range(4, 7) :
        m1.append(float(argv[loop]))
    time = int(argv[7])

def calcul_velocity_vector():
    pass
check_error()
convert_args()
print(m0)
print(m1)
print(time)
exit(0)
